{
  "form-container": {
    "background": {
      "$type": "color",
      "$value": "{color.surface.container.background}"
    },
    "border": {
      "$type": "color",
      "$value": "{color.surface.container.border}"
    },
    "border-width": {
      "$type": "dimension",
      "$value": "{border.width.thin}"
    },
    "border-radius": {
      "$type": "dimension",
      "$value": "{border.radius.medium}"
    },
    "shadow": {
      "$type": "shadow",
      "$value": "{shadow.md}"
    },
    "padding": {
      "x": {
        "$type": "dimension",
        "$value": "{spacing.300}"
      },
      "y": {
        "$type": "dimension",
        "$value": "{spacing.300}"
      }
    },
    "spacing": {
      "section": {
        "$type": "dimension",
        "$value": "{spacing.400}"
      },
      "field": {
        "$type": "dimension",
        "$value": "{spacing.200}"
      }
    },
    "header": {
      "padding": {
        "bottom": {
          "$type": "dimension",
          "$value": "{spacing.200}"
        }
      },
      "border": {
        "$type": "color",
        "$value": "{color.surface.base.divider}"
      }
    },
    "title": {
      "font": {
        "size": {
          "$type": "dimension",
          "$value": "{font.size.xl}"
        },
        "weight": {
          "$type": "string",
          "$value": "{font.weight.bold}"
        }
      },
      "color": {
        "$type": "color",
        "$value": "{color.surface.container.text}"
      },
      "spacing": {
        "bottom": {
          "$type": "dimension",
          "$value": "{spacing.100}"
        }
      }
    },
    "description": {
      "font": {
        "size": {
          "$type": "dimension",
          "$value": "{font.size.lg}"
        },
        "weight": {
          "$type": "string",
          "$value": "{font.weight.regular}"
        }
      },
      "color": {
        "$type": "color",
        "$value": "{color.surface.container.text}"
      }
    },
    "footer": {
      "gap": {
        "$type": "dimension",
        "$value": "{spacing.100}"
      }
    }
  }
}


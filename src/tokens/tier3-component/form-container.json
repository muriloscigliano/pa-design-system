{
  "form-container": {
    "background": {
      "$type": "color",
      "$value": "{color.surface.container.background}"
    },
    "border": {
      "$type": "color",
      "$value": "{color.surface.container.border}"
    },
    "border-radius": {
      "$type": "dimension",
      "$value": "{border.radius.medium}"
    },
    "padding": {
      "x": {
        "$type": "dimension",
        "$value": "{spacing.2xl}"
      },
      "y": {
        "$type": "dimension",
        "$value": "{spacing.2xl}"
      }
    },
    "spacing": {
      "section": {
        "$type": "dimension",
        "$value": "{spacing.3xl}"
      },
      "field": {
        "$type": "dimension",
        "$value": "{spacing.lg}"
      }
    },
    "header": {
      "padding": {
        "bottom": {
          "$type": "dimension",
          "$value": "{spacing.lg}"
        }
      },
      "border": {
        "$type": "color",
        "$value": "{color.surface.base.divider}"
      }
    }
  }
}


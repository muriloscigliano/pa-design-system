{
  "header": {
    "background": {
      "$type": "color",
      "$value": "{color.surface.container.background}"
    },
    "text": {
      "$type": "color",
      "$value": "{color.surface.container.text}"
    },
    "border": {
      "$type": "color",
      "$value": "{color.surface.container.border}"
    },
    "height": {
      "$type": "dimension",
      "$value": "{spacing.7xl}"
    },
    "padding": {
      "x": {
        "$type": "dimension",
        "$value": "{spacing.2xl}"
      },
      "y": {
        "$type": "dimension",
        "$value": "{spacing.lg}"
      }
    },
    "z-index": {
      "$type": "dimension",
      "$value": "{z-index.sticky}"
    }
  }
}


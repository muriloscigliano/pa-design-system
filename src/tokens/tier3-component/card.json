{
  "card": {
    "border": {
      "width": {
        "default": {
          "$type": "dimension",
          "$value": "{border.width.thin}"
        }
      },
      "radius": {
        "default": {
          "$type": "dimension",
          "$value": "{border.radius.medium}"
        }
      }
    },
    "background": {
      "default": {
        "$type": "color",
        "$value": "{color.surface.cards.background}"
      },
      "hover": {
        "$type": "color",
        "$value": "{color.surface.cards.hover.background}"
      },
      "selected": {
        "$type": "color",
        "$value": "{color.surface.cards.selected.background}"
      }
    },
    "border": {
      "default": {
        "$type": "color",
        "$value": "{color.surface.cards.border}"
      },
      "hover": {
        "$type": "color",
        "$value": "{color.surface.cards.hover.border}"
      },
      "selected": {
        "$type": "color",
        "$value": "{color.surface.cards.selected.border}"
      }
    },
    "padding": {
      "default": {
        "x": {
          "$type": "dimension",
          "$value": "{spacing.lg}"
        },
        "y": {
          "$type": "dimension",
          "$value": "{spacing.lg}"
        }
      }
    },
    "shadow": {
      "default": {
        "$type": "shadow",
        "$value": "{shadow.sm}"
      },
      "hover": {
        "$type": "shadow",
        "$value": "{shadow.md}"
      }
    }
  }
}


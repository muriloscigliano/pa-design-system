{
  "accordion": {
    "header": {
      "background": {
        "default": {
          "$type": "color",
          "$value": "{color.surface.base.background}"
        },
        "hover": {
          "$type": "color",
          "$value": "{color.surface.cards.hover.background}"
        }
      },
      "text": {
        "$type": "color",
        "$value": "{color.surface.base.text}"
      },
      "border": {
        "$type": "color",
        "$value": "{color.surface.base.border}"
      },
      "padding": {
        "x": {
          "$type": "dimension",
          "$value": "{spacing.lg}"
        },
        "y": {
          "$type": "dimension",
          "$value": "{spacing.md}"
        }
      }
    },
    "content": {
      "background": {
        "$type": "color",
        "$value": "{color.surface.container.background}"
      },
      "text": {
        "$type": "color",
        "$value": "{color.surface.container.text}"
      },
      "padding": {
        "x": {
          "$type": "dimension",
          "$value": "{spacing.lg}"
        },
        "y": {
          "$type": "dimension",
          "$value": "{spacing.md}"
        }
      }
    },
    "icon": {
      "$type": "color",
      "$value": "{color.surface.container.icon}"
    },
    "transition": {
      "duration": {
        "default": {
          "$type": "duration",
          "$value": "{transition.duration.default}"
        }
      },
      "easing": {
        "default": {
          "$type": "string",
          "$value": "{transition.easing.default}"
        }
      }
    }
  }
}


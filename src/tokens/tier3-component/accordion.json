{
  "accordion": {
    "header": {
      "background": {
        "default": {
          "$type": "color",
          "$value": "{color.surface.base.background}"
        },
        "hover": {
          "$type": "color",
          "$value": "{color.surface.cards.hover.background}"
        }
      },
      "text": {
        "$type": "color",
        "$value": "{color.surface.base.text}"
      },
      "border": {
        "$type": "color",
        "$value": "{color.surface.base.border}"
      },
      "padding": {
        "x": {
          "$type": "dimension",
          "$value": "{spacing.200}"
        },
        "y": {
          "$type": "dimension",
          "$value": "{spacing.150}"
        }
      },
      "font": {
        "size": {
          "$type": "dimension",
          "$value": "{font.size.lg}"
        },
        "weight": {
          "$type": "string",
          "$value": "{font.weight.medium}"
        }
      }
    },
    "content": {
      "background": {
        "$type": "color",
        "$value": "{color.surface.container.background}"
      },
      "text": {
        "$type": "color",
        "$value": "{color.surface.container.text}"
      },
      "padding": {
        "x": {
          "$type": "dimension",
          "$value": "{spacing.200}"
        },
        "y": {
          "$type": "dimension",
          "$value": "{spacing.150}"
        }
      }
    },
    "border": {
      "width": {
        "$type": "dimension",
        "$value": "{border.width.thin}"
      },
      "radius": {
        "$type": "dimension",
        "$value": "{border.radius.medium}"
      }
    },
    "icon": {
      "color": {
        "$type": "color",
        "$value": "{color.surface.container.icon}"
      },
      "size": {
        "$type": "dimension",
        "$value": "{icon.size.xs}"
      }
    },
    "outline": {
      "width": {
        "$type": "dimension",
        "$value": "{outline.width.default}"
      },
      "offset": {
        "$type": "dimension",
        "$value": "{outline.offset.default}"
      }
    },
    "transition": {
      "duration": {
        "default": {
          "$type": "duration",
          "$value": "{transition.duration.default}"
        }
      },
      "easing": {
        "default": {
          "$type": "string",
          "$value": "{transition.easing.default}"
        }
      }
    }
  }
}


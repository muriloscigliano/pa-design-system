{
  "textarea": {
    "background": {
      "default": {
        "$type": "color",
        "$value": "{color.input.background.default}"
      },
      "hover": {
        "$type": "color",
        "$value": "{color.input.background.hover}"
      },
      "focus": {
        "$type": "color",
        "$value": "{color.input.background.focus}"
      },
      "disabled": {
        "$type": "color",
        "$value": "{color.input.background.disabled}"
      }
    },
    "text": {
      "default": {
        "$type": "color",
        "$value": "{color.input.text.default}"
      },
      "placeholder": {
        "$type": "color",
        "$value": "{color.input.text.placeholder}"
      },
      "disabled": {
        "$type": "color",
        "$value": "{color.input.text.disabled}"
      }
    },
    "border": {
      "width": {
        "default": {
          "$type": "dimension",
          "$value": "{border.width.thin}"
        }
      },
      "radius": {
        "default": {
          "$type": "dimension",
          "$value": "{border.radius.medium}"
        }
      },
      "default": {
        "$type": "color",
        "$value": "{color.input.border.default}"
      },
      "hover": {
        "$type": "color",
        "$value": "{color.input.border.hover}"
      },
      "focus": {
        "$type": "color",
        "$value": "{color.input.border.focus}"
      },
      "error": {
        "$type": "color",
        "$value": "{color.input.border.error}"
      },
      "disabled": {
        "$type": "color",
        "$value": "{color.input.border.disabled}"
      }
    },
    "size": {
      "sm": {
        "padding": {
          "x": {
            "$type": "dimension",
            "$value": "{spacing.150}"
          },
          "y": {
            "$type": "dimension",
            "$value": "{spacing.50}"
          }
        },
        "font": {
          "$type": "dimension",
          "$value": "{font.size.md}"
        },
        "min-height": {
          "$type": "dimension",
          "$value": "{spacing.600}"
        }
      },
      "md": {
        "padding": {
          "x": {
            "$type": "dimension",
            "$value": "{spacing.200}"
          },
          "y": {
            "$type": "dimension",
            "$value": "{spacing.100}"
          }
        },
        "font": {
          "$type": "dimension",
          "$value": "{font.size.lg}"
        },
        "min-height": {
          "$type": "dimension",
          "$value": "{spacing.700}"
        }
      },
      "lg": {
        "padding": {
          "x": {
            "$type": "dimension",
            "$value": "{spacing.300}"
          },
          "y": {
            "$type": "dimension",
            "$value": "{spacing.150}"
          }
        },
        "font": {
          "$type": "dimension",
          "$value": "{font.size.xl}"
        },
        "min-height": {
          "$type": "dimension",
          "$value": "{spacing.700}"
        }
      }
    },
    "transition": {
      "duration": {
        "default": {
          "$type": "duration",
          "$value": "{transition.duration.default}"
        }
      },
      "easing": {
        "default": {
          "$type": "string",
          "$value": "{transition.easing.default}"
        }
      }
    },
    "outline": {
      "width": {
        "default": {
          "$type": "dimension",
          "$value": "{outline.width.default}"
        }
      },
      "offset": {
        "default": {
          "$type": "dimension",
          "$value": "{outline.offset.default}"
        }
      }
    },
    "counter": {
      "text": {
        "$type": "color",
        "$value": "{color.surface.container.text}"
      },
      "font": {
        "size": {
          "$type": "dimension",
          "$value": "{font.size.md}"
        }
      },
      "spacing": {
        "top": {
          "$type": "dimension",
          "$value": "{spacing.50}"
        }
      },
      "error": {
        "color": {
          "$type": "color",
          "$value": "{color.status.error.border.default}"
        }
      }
    }
  }
}


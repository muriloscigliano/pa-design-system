{
  "modal": {
    "overlay": {
      "background": {
        "$type": "color",
        "$value": "{color.modal.overlay.background}"
      },
      "z-index": {
        "$type": "dimension",
        "$value": "{z-index.400}"
      },
      "padding": {
        "$type": "dimension",
        "$value": "{spacing.200}"
      }
    },
    "container": {
      "background": {
        "$type": "color",
        "$value": "{color.modal.container.background}"
      },
      "border": {
        "$type": "color",
        "$value": "{color.modal.container.border}"
      },
      "border-width": {
        "$type": "dimension",
        "$value": "{border.width.thin}"
      },
      "border-radius": {
        "$type": "dimension",
        "$value": "{border.radius.large}"
      },
      "shadow": {
        "$type": "shadow",
        "$value": "{shadow.lg}"
      },
      "z-index": {
        "$type": "dimension",
        "$value": "{z-index.500}"
      },
      "max-width": {
        "sm": {
          "$type": "dimension",
          "$value": "{layout.modal.max-width.sm}"
        },
        "md": {
          "$type": "dimension",
          "$value": "{layout.modal.max-width.md}"
        },
        "lg": {
          "$type": "dimension",
          "$value": "{layout.modal.max-width.lg}"
        },
        "fullscreen": {
          "$type": "dimension",
          "$value": "{layout.modal.max-width.fullscreen}"
        }
      }
    },
    "header": {
      "background": {
        "$type": "color",
        "$value": "{color.modal.header.background}"
      },
      "text": {
        "$type": "color",
        "$value": "{color.modal.header.text}"
      },
      "padding": {
        "x": {
          "$type": "dimension",
          "$value": "{spacing.300}"
        },
        "y": {
          "$type": "dimension",
          "$value": "{spacing.200}"
        }
      },
      "border": {
        "width": {
          "$type": "dimension",
          "$value": "{border.width.thin}"
        },
        "color": {
          "$type": "color",
          "$value": "{color.modal.footer.border}"
        }
      }
    },
    "close": {
      "font": {
        "size": {
          "$type": "dimension",
          "$value": "{font.size.xl}"
        }
      },
      "size": {
        "width": {
          "$type": "dimension",
          "$value": "{spacing.400}"
        },
        "height": {
          "$type": "dimension",
          "$value": "{spacing.400}"
        }
      },
      "padding": {
        "$type": "dimension",
        "$value": "{spacing.50}"
      },
      "radius": {
        "$type": "dimension",
        "$value": "{border.radius.small}"
      },
      "background": {
        "hover": {
          "$type": "color",
          "$value": "{color.surface.cards.hover.background}"
        }
      }
    },
    "body": {
      "padding": {
        "x": {
          "$type": "dimension",
          "$value": "{spacing.300}"
        },
        "y": {
          "$type": "dimension",
          "$value": "{spacing.200}"
        }
      }
    },
    "footer": {
      "background": {
        "$type": "color",
        "$value": "{color.modal.footer.background}"
      },
      "border": {
        "width": {
          "$type": "dimension",
          "$value": "{border.width.thin}"
        },
        "color": {
          "$type": "color",
          "$value": "{color.modal.footer.border}"
        }
      },
      "padding": {
        "x": {
          "$type": "dimension",
          "$value": "{spacing.300}"
        },
        "y": {
          "$type": "dimension",
          "$value": "{spacing.200}"
        }
      }
    }
  }
}


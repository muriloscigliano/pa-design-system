{
  "toggle-chip": {
    "background": {
      "default": {
        "$type": "color",
        "$value": "{color.surface.container.background}"
      },
      "selected": {
        "$type": "color",
        "$value": "{color.action.primary.background.default}"
      },
      "hover": {
        "$type": "color",
        "$value": "{color.surface.cards.hover.background}"
      }
    },
    "text": {
      "default": {
        "$type": "color",
        "$value": "{color.surface.container.text}"
      },
      "selected": {
        "$type": "color",
        "$value": "{color.action.primary.text.default}"
      }
    },
    "border": {
      "default": {
        "$type": "color",
        "$value": "{color.surface.container.border}"
      },
      "selected": {
        "$type": "color",
        "$value": "{color.action.primary.border.default}"
      }
    },
    "border-radius": {
      "$type": "dimension",
      "$value": "{border.radius.full}"
    },
    "padding": {
      "x": {
        "$type": "dimension",
        "$value": "{spacing.md}"
      },
      "y": {
        "$type": "dimension",
        "$value": "{spacing.sm}"
      }
    }
  }
}


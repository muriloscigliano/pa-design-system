{
  "tooltip": {
    "background": {
      "$type": "color",
      "$value": "{color.tooltip.background}"
    },
    "text": {
      "$type": "color",
      "$value": "{color.tooltip.text}"
    },
    "arrow": {
      "$type": "color",
      "$value": "{color.tooltip.arrow}"
    },
    "border": {
      "radius": {
        "default": {
          "$type": "dimension",
          "$value": "{border.radius.medium}"
        }
      }
    },
    "padding": {
      "x": {
        "$type": "dimension",
        "$value": "{spacing.150}"
      },
      "y": {
        "$type": "dimension",
        "$value": "{spacing.100}"
      }
    },
    "font": {
      "size": {
        "$type": "dimension",
        "$value": "{font.size.md}"
      }
    },
    "z-index": {
      "$type": "dimension",
      "$value": "{z-index.top}"
    },
    "max-width": {
      "$type": "dimension",
      "$value": "{spacing.500}"
    },
    "arrow": {
      "size": {
        "$type": "dimension",
        "$value": "{spacing.100}"
      },
      "offset": {
        "$type": "dimension",
        "$value": "{spacing.100}"
      }
    },
    "font": {
      "weight": {
        "$type": "string",
        "$value": "{font.weight.regular}"
      }
    },
    "transition": {
      "duration": {
        "fast": {
          "$type": "duration",
          "$value": "{transition.duration.fast}"
        }
      }
    }
  }
}


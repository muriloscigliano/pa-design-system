{
  "tooltip": {
    "background": {
      "$type": "color",
      "$value": "{color.tooltip.background}"
    },
    "text": {
      "$type": "color",
      "$value": "{color.tooltip.text}"
    },
    "arrow": {
      "$type": "color",
      "$value": "{color.tooltip.arrow}"
    },
    "border": {
      "radius": {
        "default": {
          "$type": "dimension",
          "$value": "{border.radius.medium}"
        }
      }
    },
    "padding": {
      "x": {
        "$type": "dimension",
        "$value": "{spacing.md}"
      },
      "y": {
        "$type": "dimension",
        "$value": "{spacing.sm}"
      }
    },
    "font": {
      "size": {
        "$type": "dimension",
        "$value": "{font.size.md}"
      }
    },
    "z-index": {
      "$type": "dimension",
      "$value": "{z-index.top}"
    }
  }
}


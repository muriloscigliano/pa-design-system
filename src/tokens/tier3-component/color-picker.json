{
  "color-picker": {
    "size": {
      "$type": "dimension",
      "$value": "{spacing.600}"
    },
    "border": {
      "$type": "color",
      "$value": "{color.surface.container.border}"
    },
    "border-width": {
      "$type": "dimension",
      "$value": "{border.width.thin}"
    },
    "radius": {
      "$type": "dimension",
      "$value": "{border.radius.medium}"
    },
    "cursor": {
      "default": {
        "$type": "string",
        "$value": "{cursor.pointer}"
      },
      "disabled": {
        "$type": "string",
        "$value": "{cursor.not-allowed}"
      }
    }
  }
}


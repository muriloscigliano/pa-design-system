{
  "dropdown": {
    "menu": {
      "background": {
        "$type": "color",
        "$value": "{color.surface.container.background}"
      },
      "border": {
        "$type": "color",
        "$value": "{color.surface.container.border}"
      },
      "border-radius": {
        "$type": "dimension",
        "$value": "{border.radius.medium}"
      },
      "shadow": {
        "$type": "shadow",
        "$value": "{shadow.md}"
      },
      "padding": {
        "x": {
          "$type": "dimension",
          "$value": "{spacing.sm}"
        },
        "y": {
          "$type": "dimension",
          "$value": "{spacing.xs}"
        }
      },
      "z-index": {
        "$type": "dimension",
        "$value": "{z-index.modal}"
      }
    },
    "item": {
      "background": {
        "default": {
          "$type": "color",
          "$value": "transparent"
        },
        "hover": {
          "$type": "color",
          "$value": "{color.surface.cards.hover.background}"
        },
        "selected": {
          "$type": "color",
          "$value": "{color.surface.cards.selected.background}"
        }
      },
      "text": {
        "default": {
          "$type": "color",
          "$value": "{color.surface.container.text}"
        },
        "selected": {
          "$type": "color",
          "$value": "{color.surface.container.text}"
        }
      },
      "padding": {
        "x": {
          "$type": "dimension",
          "$value": "{spacing.md}"
        },
        "y": {
          "$type": "dimension",
          "$value": "{spacing.sm}"
        }
      }
    }
  }
}


{
  "badge": {
    "border": {
      "radius": {
        "default": {
          "$type": "dimension",
          "$value": "{border.radius.full}"
        }
      }
    },
    "background": {
      "default": {
        "$type": "color",
        "$value": "{color.badge.background.default}"
      },
      "success": {
        "$type": "color",
        "$value": "{color.badge.background.success}"
      },
      "warning": {
        "$type": "color",
        "$value": "{color.badge.background.warning}"
      },
      "error": {
        "$type": "color",
        "$value": "{color.badge.background.error}"
      }
    },
    "text": {
      "default": {
        "$type": "color",
        "$value": "{color.badge.text.default}"
      },
      "success": {
        "$type": "color",
        "$value": "{color.badge.text.success}"
      },
      "warning": {
        "$type": "color",
        "$value": "{color.badge.text.warning}"
      },
      "error": {
        "$type": "color",
        "$value": "{color.badge.text.error}"
      }
    },
    "size": {
      "sm": {
        "padding": {
          "x": {
            "$type": "dimension",
            "$value": "{spacing.sm}"
          },
          "y": {
            "$type": "dimension",
            "$value": "{spacing.xs}"
          }
        },
        "font": {
          "$type": "dimension",
          "$value": "{font.size.sm}"
        }
      },
      "md": {
        "padding": {
          "x": {
            "$type": "dimension",
            "$value": "{spacing.md}"
          },
          "y": {
            "$type": "dimension",
            "$value": "{spacing.xs}"
          }
        },
        "font": {
          "$type": "dimension",
          "$value": "{font.size.md}"
        }
      },
      "lg": {
        "padding": {
          "x": {
            "$type": "dimension",
            "$value": "{spacing.lg}"
          },
          "y": {
            "$type": "dimension",
            "$value": "{spacing.sm}"
          }
        },
        "font": {
          "$type": "dimension",
          "$value": "{font.size.lg}"
        }
      }
    }
  }
}


{
  "loading": {
    "spinner": {
      "primary": {
        "$type": "color",
        "$value": "{color.loading.spinner.primary}"
      },
      "secondary": {
        "$type": "color",
        "$value": "{color.loading.spinner.secondary}"
      }
    },
    "size": {
      "sm": {
        "$type": "dimension",
        "$value": "{icon.size.sm}"
      },
      "md": {
        "$type": "dimension",
        "$value": "{icon.size.md}"
      },
      "lg": {
        "$type": "dimension",
        "$value": "{icon.size.lg}"
      }
    },
    "overlay": {
      "background": {
        "$type": "color",
        "$value": "rgba(255, 255, 255, 0.8)"
      },
      "z-index": {
        "$type": "dimension",
        "$value": "{z-index.300}"
      }
    }
  }
}


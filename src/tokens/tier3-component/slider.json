{
  "slider": {
    "track": {
      "height": {
        "$type": "dimension",
        "$value": "{spacing.xs}"
      },
      "background": {
        "$type": "color",
        "$value": "{color.slider.track.background}"
      },
      "filled": {
        "$type": "color",
        "$value": "{color.slider.track.filled}"
      },
      "radius": {
        "$type": "dimension",
        "$value": "{border.radius.full}"
      }
    },
    "thumb": {
      "width": {
        "$type": "dimension",
        "$value": "{spacing.xl}"
      },
      "height": {
        "$type": "dimension",
        "$value": "{spacing.xl}"
      },
      "background": {
        "$type": "color",
        "$value": "{color.slider.thumb.background}"
      },
      "border": {
        "width": {
          "$type": "dimension",
          "$value": "{border.width.medium}"
        },
        "color": {
          "$type": "color",
          "$value": "{color.slider.thumb.border}"
        }
      },
      "hover": {
        "$type": "color",
        "$value": "{color.slider.thumb.hover}"
      },
      "radius": {
        "$type": "dimension",
        "$value": "{border.radius.full}"
      }
    },
    "mark": {
      "width": {
        "$type": "dimension",
        "$value": "{border.width.thin}"
      },
      "height": {
        "$type": "dimension",
        "$value": "{spacing.sm}"
      },
      "background": {
        "$type": "color",
        "$value": "{color.slider.mark.background}"
      }
    }
  }
}

